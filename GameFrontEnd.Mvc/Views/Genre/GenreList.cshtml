@model List<Genre>
@{
	ViewBag.Title = "Game Genres";
	ViewBag.CurrentUrl = "~/Game/Genre";
}
<br />
<div class="text-grey">
	<span>Games</span>
	<i class="fa-solid fa-caret-right"></i>
	<span>Genres</span>
</div>
<div class="container p-4 - border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Genres</h1>
		</div>
		<div class="col text-end p-1">
			<a asp-controller="Genre" asp-action="CreateGenre" class="btn btn-outline-primaryl"><i class="fa-solid fa-pen-to-square"></i> Add Genre</a>
		</div>
	</div>

	<table class="table table-striped table-hover align-middle">
		<thead>
			<tr>
				
				<th>Genre</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					
					<td>
						@item.Name
					</td>

					
					
				</tr>
			}
		</tbody>

	</table>
</div>