@model GameReadDTO
@{
	ViewBag.Title = "Game Details";
	ViewBag.CurrentUrl = "~/Game/Details";
}
<div class="text-grey">
	<span>Games</span>
	<i class="fa-solid fa-caret-right"></i>
	<span>Details</span>
</div>

<br />
<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">

			<div class="card shadow-sm border-0">
				<div class="card-header bg-primary text-white">
					<h4 class="mb-0">🎮 Game Details</h4>
				</div>

				<div class="card-body">

					<input type="hidden" asp-for="GameId" />
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<!-- Game Name -->
					<div class="mb-3">
						<label asp-for="GameName" class="form-label"></label>
						<input asp-for="GameName" class="form-control" readonly />
					</div>

					<!-- Game Price -->
					<div class="mb-3">
						<label asp-for="GamePrice" class="form-label"></label>
						<input asp-for="GamePrice" class="form-control" readonly />
					</div>

					<!-- Release Date -->
					<div class="mb-3">
						<label asp-for="ReleaseDate" class="form-label"></label>
						<input asp-for="ReleaseDate" class="form-control" type="date" readonly />
					</div>
					<div class="row mb-3 align-items-center">
						<label asp-for="GenreId" class="col-sm-3 col-form-label">
							Genre Type
						</label>

						<div class="col-sm-9">
							<select asp-for="GenreId"
									class="form-select"
									disabled>
								@foreach (var genre in ViewBag.Genre)
								{
									<option value="@genre.GenreId">
										@genre.Name
									</option>
								}
							</select>
						</div>
					</div>


					<!-- Image URL -->
					<div class="mb-4">
						<label asp-for="ImageUri" class="form-label"></label>
						<input asp-for="ImageUri" class="form-control" readonly />
					</div>
					<div class="mb-4 text-center">
						<img src="@Model.ImageUri"
							 class="img-fluid rounded shadow-sm"
							 style="max-height:200px;" />
					</div>
					<!-- Buttons -->
					<div class="d-flex justify-content-between">
						<a asp-action="Edit"
						   asp-controller="Game"
						   asp-route-GameId="@Model.GameId"
						   class="btn btn-primary">
							<i class="fa-solid fa-pen-to-square me-1"></i>
							Edit
						</a>
						<a asp-action="Index"
						   asp-controller="Game"
						   class="btn btn-outline-secondary px-4">
							Back
						</a>
					</div>

				</div>
			</div>

		</div>
	</div>
</div>


